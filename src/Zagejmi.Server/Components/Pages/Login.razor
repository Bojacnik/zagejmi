@page "/login"

<div class="grid place-items-center">
<h1>Login</h1>
    <div class="flex flex-col max-w-48 gap-2">
        <h1>Username</h1>
        <input type="email" class="border-2 bg-amber-50"/>

        <h1>Password</h1>
        <input type="password" class="border-2 bg-amber-50"/>

        <div class="flex flex-row gap-4">
            <button type="submit" class="p-2 bg-green-600 hover:bg-green-700 rounded-2xl">Submit</button>
            <a href="/register">
                <button type="button" class="p-2 bg-blue-500 hover:bg-blue-700 rounded-2xl">Register Instead</button>
            </a>
        </div>
    </div>
</div>

