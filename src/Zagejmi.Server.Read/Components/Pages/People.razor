@page "/people"

<div class="w-full h-full grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5 grid-flow-row-dense gap-4 p-4 overflow-y-auto">
    @foreach (PersonModel person in PeopleList)
    {
        <div class="relative group rounded-lg overflow-hidden shadow-lg bg-primary-900 transform transition-transform duration-300 hover:scale-105 hover:shadow-accent-700/40">
            <div class="absolute inset-0">
                <img src="@person.ImageUrl" class="w-full h-full object-cover" alt="Profile picture of @person.Name" />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
            <div class="absolute left-0 bottom-0 z-10 p-4 flex flex-col items-start w-full text-text-default">
                <p class="font-bold text-lg">
                    @person.Name
                </p>
                <div class="inline-flex px-2 py-1 mt-1 text-xs rounded-full bg-accent-600 text-text-default">
                    <p>@person.Role</p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<PersonModel> PeopleList = [];

    protected override void OnInitialized()
    {
        // Simulate fetching data
        PeopleList = Enumerable.Range(1, 20).Select(i => new PersonModel
        {
            Name = $"Person Name {i}",
            Role = "Role or Title",
            ImageUrl = $"https://picsum.photos/seed/{i}/400/600"
        }).ToList();
    }

    public class PersonModel
    {
        public string Name { get; set; } = "";
        public string Role { get; set; } = "";
        public string ImageUrl { get; set; } = "";
    }
}